# Dockerfile para el servidor backend (desarrollo)
FROM node:18-alpine

# Establecer directorio de trabajo
WORKDIR /app

# Copiar archivos de dependencias
COPY package*.json ./

# Instalar todas las dependencias
RUN npm ci

# Copiar cÃ³digo fuente
COPY . .

# Crear script de inicio que ejecute seed y luego el servidor
RUN echo '#!/bin/sh' > /start.sh && \
    echo 'echo "ðŸŒ± Ejecutando seed de datos..."' >> /start.sh && \
    echo 'sleep 5' >> /start.sh && \
    echo 'npm run seed || echo "âš ï¸ Seed fallÃ³, continuando..."' >> /start.sh && \
    echo 'echo "ðŸš€ Iniciando servidor..."' >> /start.sh && \
    echo 'npm run server:dev' >> /start.sh && \
    chmod +x /start.sh

# Exponer puerto
EXPOSE 3001

# Comando por defecto
CMD ["/start.sh"]
